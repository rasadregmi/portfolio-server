{
  "rewrites": [
    { "source": "/api/contact", "destination": "portfolio-server-snowy-ten.vercel.app/api/contact" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://www.rasadregmi.com.np" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
